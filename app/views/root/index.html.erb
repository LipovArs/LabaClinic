<div class="container">
  <% if user_signed_in? %>
    <div> Welcome <%= current_user.email %> </div>
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, :class=>"btn btn-success" %>
  <% else %>
    <%= button_to "Sign in", new_user_session_path, :class=>"btn btn-success" %>
  <% end %>
</div>

<div class="container navbar navbar-expand-sm bg-light">
  <%= link_to 'Doctors', doctors_path, :class=>"btn btn-primary" %>
  <%= link_to 'Patients', patients_path, :class=>"btn btn-primary" %>
  <%= link_to 'Departments', departments_path, :class=>"btn btn-primary" %>
  <%= link_to 'Patient Cards', patient_cards_path, :class=>"btn btn-primary" %>
  <%= link_to 'Specialization', specializations_path, :class=>"btn btn-primary" %>
</div>
