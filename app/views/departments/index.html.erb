<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

<h1>Departments</h1>

<div class="style_for_pages">
<%= form_with(url: departments_path, method: :get) do |form| %>
  <%= form.text_field :query, placeholder: 'Search departments', :class=>"form-control me-2" %>
  <%= form.submit 'Search', :class=>"btn btn-primary" %>
<% end %>

<div class="style_for_pages card" id="departments">
  <% @departments.each do |department| %>
    <%= render department %>
    <p>
      <%= link_to "Show this department", department, :class=>"card-footer btn btn-primary" %>
    </p>
  <% end %>
</div>

<%= will_paginate @departments, :class=>"page-link" %>

<p>
  <%= link_to 'New department', new_department_path %>
</p>

<p>
  Sort by:
  <%= link_to 'Name (asc)', { sort_field: 'name', sort_direction: 'asc' } %>
  <%= link_to 'Name (desc)', { sort_field: 'name', sort_direction: 'desc' } %>
  <%= link_to 'Created at (asc)', { sort_field: 'created_at', sort_direction: 'asc' } %>
  <%= link_to 'Created at (desc)', { sort_field: 'created_at', sort_direction: 'desc' } %>
</p>
</div>